#include <iostream>
#include <vector>
#include <algorithm>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<vector<int>> mat(n, vector<int>(n));
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n; j++)
            cin >> mat[i][j];

    vector<vector<int>> maxArr(n, vector<int>(n));
    int maxValue = INT_MIN;

    maxArr[n-1][n-1] = mat[n-1][n-1];

    for (int i = n - 2; i >= 0; i--)
        maxArr[i][n-1] = max(mat[i][n-1], maxArr[i+1][n-1]);
    for (int j = n - 2; j >= 0; j--)
        maxArr[n-1][j] = max(mat[n-1][j], maxArr[n-1][j+1]);

    for (int i = n - 2; i >= 0; i--) {
        for (int j = n - 2; j >= 0; j--) {
            maxValue = max(maxValue, maxArr[i+1][j+1] - mat[i][j]);
            maxArr[i][j] = max(mat[i][j], max(maxArr[i+1][j], maxArr[i][j+1]));
        }
    }

    cout << maxValue;
    return 0;
}
