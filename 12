#include <iostream>
#include <vector>
using namespace std;

struct Element {
    int row, col, value;
};

int main() {
    int m, n, numNonZero;
    cin >> m >> n >> numNonZero;
    vector<Element> sparse;

    for (int i = 0; i < numNonZero; i++) {
        int r, c, val;
        cin >> r >> c >> val;
        sparse.push_back({r, c, val});
    }

    cout << "Sparse Matrix Representation:\n";
    cout << "Row Col Value\n";
    for (auto e : sparse)
        cout << e.row << " " << e.col << " " << e.value << "\n";

    return 0;
}
