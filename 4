#include <iostream>
#include <vector>
using namespace std;

int main() {
    int n, m;
    cin >> n >> m;
    vector<vector<int>> mat(n, vector<int>(m));
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            cin >> mat[i][j];

    int maxRowIndex = -1;
    int j = m - 1;

    for (int i = 0; i < n; i++) {
        while (j >= 0 && mat[i][j] == 1) {
            j--;
            maxRowIndex = i;
        }
    }

    cout << maxRowIndex;
    return 0;
}
